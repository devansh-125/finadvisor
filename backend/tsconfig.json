{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": [
    "index.js",
    "routes/**/*.js",
    "services/**/*.js",
    "middleware/**/*.js",
    "config/**/*.js",
    "models/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".vscode"
  ]
}
