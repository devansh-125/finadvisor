# Environment Variables - Copy to .env and fill with your actual values

# Server Configuration
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/finadvisor?appName=Cluster0

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Google OAuth 2.0 (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# AI API Keys

# Groq API (https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google Gemini (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic (https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=hf_your_huggingface_token_here

# Financial Data API Keys

# Alpha Vantage (https://www.alphavantage.co/api/)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Financial Modeling Prep (https://financialmodelingprep.com/)
FMP_API_KEY=your_fmp_api_key_here

# NewsAPI (https://newsapi.org/)
NEWS_API_KEY=your_newsapi_key_here

# Exchange Rate API (https://exchangerate-api.com/)
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Backend URL (for OAuth callback - used in production)
BACKEND_URL=http://localhost:5000
